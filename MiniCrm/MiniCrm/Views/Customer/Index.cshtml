@model IEnumerable<MiniCrm.Models.CustomerModel>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h2>Müşteri Listesi</h2>

<p>
    <a href="/Customer/EY" class="btn btn-primary mb-3">Yeni Müşteri Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şirket</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Company</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a href="/Customer/EY/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Customer/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
