@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Müşteri Bazlı Satışlar";
}

<h2>Müşteri Bazlı Satışlar</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri Adı</th>
            <th>Satış Sayısı</th>
            <th>Toplam Gelir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.SalesCount</td>
                <td>@item.TotalRevenue</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Home/Index" class="btn btn-secondary">Geri Dön</a>
